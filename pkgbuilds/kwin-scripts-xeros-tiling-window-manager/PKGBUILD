# Maintainer: xerootg

pkgname='kwin-scripts-xeros-tiling-window-manager-git'
_pkgname='xeros-tiling-window-manager'
pkgver=1.1
pkgrel=1
pkgdesc="Xero's Tiling Window Manager - KDE KWin Script for snapping windows into zones"
arch=('any')
url='https://github.com/xerootg/xeros-tiling-window-manager'
license=('GPL-3.0-only')
depends=('kwin')
makedepends=('git')
source=("git+https://github.com/xerootg/xeros-tiling-window-manager.git")
sha256sums=('SKIP')

pkgver() {
	cd "$_pkgname"
	git describe --tags --abbrev=0 | sed 's/^v//'
}

package() {
	cd "$_pkgname"
	install -d "${pkgdir}/usr/share/kwin/scripts/${_pkgname}"
	cp -r contents metadata.json "${pkgdir}/usr/share/kwin/scripts/${_pkgname}"
}
